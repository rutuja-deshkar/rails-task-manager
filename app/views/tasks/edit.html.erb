<h1>Edit Task</h1>
<%= @task.inspect %>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.check_box :completed, class: 'form-control'%>
    Completed
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
